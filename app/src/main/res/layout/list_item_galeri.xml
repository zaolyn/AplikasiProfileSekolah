<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="309dp"
        android:layout_height="140dp"
        android:layout_marginBottom="28dp"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/image_list_galeri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:color/darker_gray"
                android:scaleType="centerCrop" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_image" />

            <TextView
                android:id="@+id/title_list_galeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="77dp"
                android:text="Latihan dasar kepemimpinan"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/subtitle_list_galeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Latihan dasar kepemimpinan"
                android:layout_below="@id/title_list_galeri"
                android:textColor="@android:color/white"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>